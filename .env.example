# AI Voice Detection API Environment Configuration
# Copy this file to .env and update values for your environment

# ============== API SETTINGS ==============
APP_NAME=AI Voice Detection API
APP_VERSION=1.0.0
DEBUG=false

# ============== SERVER SETTINGS ==============
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============== AUTHENTICATION ==============
# Comma-separated list of valid API keys
# In production, generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=demo_key_12345,production_key_abc123

# ============== AUDIO PROCESSING ==============
TARGET_SAMPLE_RATE=22050
MIN_AUDIO_DURATION=1.0
MAX_AUDIO_DURATION=60.0
MAX_FILE_SIZE_MB=10

# ============== MODEL SETTINGS ==============
MODEL_PATH=models
MODEL_VERSION=1.0.0

# ============== REDIS (CACHING) ==============
# Uncomment for production caching
# REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============== DATABASE (LOGGING) ==============
# Uncomment for production logging
# DATABASE_URL=postgresql://user:password@localhost:5432/voicedb

# ============== RATE LIMITING ==============
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============== LOGGING ==============
LOG_LEVEL=INFO

# ============== MONITORING ==============
ENABLE_METRICS=true
# SENTRY_DSN=https://your-sentry-dsn
